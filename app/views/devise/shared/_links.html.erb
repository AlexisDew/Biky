<div class="authentication-tabs">

  <%- if controller_name == 'sessions' %>
    <%= link_to('CONNEXION', new_session_path(resource_name), class: 'authentication-tab active')  %>
    <%= link_to('INSCRIPTION', new_registration_path(resource_name), class: 'authentication-tab')  %>
  <% end %>

  <%- if controller_name == 'registrations' %>
    <%= link_to('CONNEXION', new_session_path(resource_name), class: 'authentication-tab')  %>
    <%= link_to('INSCRIPTION', new_registration_path(resource_name), class: 'authentication-tab active')  %>
  <% end %>
