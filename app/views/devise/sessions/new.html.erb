<%= render "devise/shared/links" %>

<h2>Connectez-vous à votre compte</h2>
<br>

<div class='text-center'>
  <%- if devise_mapping.omniauthable? %>
    <ul class="list-inline">
      <%- resource_class.omniauth_providers.each do |provider| %>
        <li class="list-inline-item"><%= link_to omniauth_authorize_path(resource_name, provider), :title => "Sign in with #{provider.to_s.titleize}" do %>
        <%= image_tag "omniauth/oauth_#{provider}.png", :alt => "Sign in with #{provider.to_s.titleize}", class: 'oauth_icon'%><% end -%>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>

<p class='text-center'>Ou</p>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <p class='thin'>Mot de passe oublié ? <%= link_to('Le retrouver', new_password_path(resource_name))  %></p>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, "Se connecter", class: 'btn btn-primary-biky' %>
  </div>
<% end %>


<div class='text-center'>
  <br>
  <p class='thin smallest'>Vous n'avez pas encore de compte sur Biky ? <%= link_to('Créer un compte', new_registration_path(resource_name))  %></p>
</div>
