<h2><%= @bike.model.name %></h2>
<p><%= @bike.color %></p>
<p><%= @bike.city.name %></p>


<div class="widget-content" data-unavailable="<%= @bike.unavailable_dates.to_json %>"></div>

<%= simple_form_for([@bike, @booking]) do |f| %>
  <%= f.input :start_date, as: :string, label: "Dates", placeholder: "From" %>

  <%= f.input :end_date, as: :string, label: '&nbsp;'.html_safe, placeholder: "To" %>
  <%= f.submit "book", class: "btn btn-primary btn-lg btn-block btn-booking" %>
<% end %>
